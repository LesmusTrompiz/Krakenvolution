# Lidar rule:
KERNEL=="ttyUSB*", ATTRS{idVendor}=="10c4", ATTRS{idProduct}=="ea60", MODE:="0666", SYMLINK+="rplidar"
# USB rules:
# KERNEL=="sda", SUBSYSTEM=="block", SYMLINK="pendrive"
KERNEL=="sdb", SUBSYSTEM=="block", SYMLINK="pendrive", ACTION=="add", RUN+="mkdir -p /media/pendrive", RUN+="mount /dev/sdc1 /media/pendrive"
KERNEL=="sdb", SUBSYSTEM=="block", ACTION=="remove", RUN+="umount /dev/sdc1 /media/pendrive"

# Arduino DUE:
KERNEL=="ttyACM*", ATTRS{idVendor}=="2341", ATTRS{idProduct}=="003d", MODE:="0666", SYMLINK+="arduino"
# SUBSYSTEM=="spidev", MODE:="0666"
